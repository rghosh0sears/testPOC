<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>POC</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/styles.css">
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script type="text/javascript">
      function validateLogin() {
        var username = $("#username").val();
        var password = $("#password").val();
        $.post("http://localhost:4000/loginValidation",{username: username,password: password}, function(data){
          if(data==='validate') {
                $('#showMsg').html('Encrypted password matched!');
              } else {
                $('#showMsg').html('Encrypted password not matched! You have entered and invalid password.');
              }
        });
      }
    </script>
  </head>
  <body>
    <div class="login-page">
      <div class="form">
        <p class="login-form">
          <input type="text" id="username" name="username" placeholder="username" required/>
          <input type="password" id="password" name="password"  placeholder="password" required/>
          <button onclick="validateLogin();">login</button>
          <p class="message">Not registered? <a href="signup">Create an account</a></p>
        </p>
        <span id="showMsg"></span>
      </div>
    </div>

  </body>
</html>
